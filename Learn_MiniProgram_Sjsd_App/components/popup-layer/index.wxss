/*  popup-form  */
.popup-layer {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 3;
}
.popup-layer .mask {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, .3);
}
.popup-form-wrapper {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
}